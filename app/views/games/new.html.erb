<h1>New Game</h1>

<%= form_with scope: :game, url: games_path, local: true do |form| %>

  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@game.errors.count, "error") %> prohibited
        this game from being created:
      </h2>
      <ul>
        <% @game.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :player_1_email %><br>
    <%= form.text_field :player_1_email %>
  </p>

  <p>
    <%= form.label :player_2_email %><br>
    <%= form.text_field :player_2_email %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', games_path %>
